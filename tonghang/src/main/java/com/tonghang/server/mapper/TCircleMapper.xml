	<select id="getMyCircles" resultMap="BaseResultMap">
		SELECT *
		FROM
		t_circle
		WHERE
		pid = #{userId}
		AND
		(checked !=0 or checked is null)
		AND type = 1
		ORDER BY
		datetime desc
	</select>

	<select id="getAllCircleShow" parameterType="list" resultMap="BaseResultMap">
		SELECT *
		FROM t_circle
		WHERE (checked !=0 or checked is null)
		AND type = 1
		<if test="pageNo!=0">
			AND id &lt; #{pageNo}
		</if>
		ORDER BY
		datetime desc
		limit #{pageSize}


	</select>


