	<sql id="circleVoResultMapSQL">
		select
		c.*,
		p.id p_id,
		p.phone p_phone,
		p.password p_password,
		p.timestamp p_timestamp,
		p.name
		p_name,
		p.pic p_pic,
		p.sex p_sex,
		p.position p_position,
		p.college
		p_college,
		p.trade_id p_trade_id,
		p.province_id p_province_id,
		p.city_id
		p_city_id,
		p.remark p_remark,
		p.device p_device,
		p.longitude p_longitude,
		p.latitude p_latitude,
		p.state p_state,
		p.language p_language,
		p.group_id p_group_id
		from t_circle c
		left outer join t_phone p on p.id
		= c.pid
	</sql>
	<sql id="serviceVoSql">
		select
		s.id,
		s.title,
		s.content description,
		s.pics pictures,
		s.datetime timestamp,
        s.checked,
		p.id uid,
		p.name,
		p.phone,
		p.state,
		p.trade_id,
		t.name tradeName
		from
		t_circle s
		left outer join
		t_phone p on p.id = s.pid
		left outer join
		t_trade t on t.id =
		p.trade_id
	</sql>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from
		t_circle
		where id = #{id}
	</delete>
	<insert id="insert" parameterType="com.tonghang.server.entity.TCircle">
		<selectKey resultType="java.lang.Integer" keyProperty="id"
			order="BEFORE">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into t_circle (id, title, hot,
		datetime, pic,
		type,
		pid, checked, pics, area,
		trade_id, content,url)
		values
		(#{id}, #{title}, #{hot},
		#{datetime}, #{pic}, #{type},
		#{pid}, #{checked}, #{pics}, #{area},
		#{tradeId},
		#{content},#{url})
	</insert>
	<update id="checkCircle" parameterType="java.lang.Integer">
		update t_circle
		set
		checked = 1
		where id = #{id}
	</update>
	<update id="updateByPrimaryKey" parameterType="com.tonghang.server.entity.TCircle">
		update t_circle
		<set>
			<if test="title != null and title != ''">
				title = #{title},
			</if>
			<if test="hot != null and hot != ''">
				hot = #{hot},
			</if>
			<if test="datetime != null and datetime != ''">
				datetime = #{datetime},
			</if>
			<if test="pic != null and pic != ''">
				pic = #{pic},
			</if>
			<if test="pageView != null and pageView != ''">
				page_view = #{pageView},
			</if>
			<if test="favour != null and favour != ''">
				favour = #{favour},
			</if>
			<if test="comment != null and comment != ''">
				comment = #{comment},
			</if>
			<if test="share != null and share != ''">
				share = #{share},
			</if>
			<if test="type != null and type != ''">
				type = #{type},
			</if>
			<if test="pid != null and pid != ''">
				pid = #{pid},
			</if>
			<if test="checked != null and checked != ''">
				checked = #{checked},
			</if>
			<if test="pics != null and pics != ''">
				pics = #{pics},
			</if>
			<if test="area != null and area != ''">
				area = #{area},
			</if>
			<if test="tradeId != null and tradeId != ''">
				trade_id = #{tradeId},
			</if>
			<if test="content != null and content != ''">
				content = #{content}
			</if>
		</set>
		where id = #{id}
	</update>
